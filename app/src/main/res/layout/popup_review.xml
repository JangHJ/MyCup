<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/border_popup"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/popup_length1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:text="30mm~45mm"
        android:textSize="12dp"
        android:lineHeight="16dp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/gray_c5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/popup_length2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:text="46mm~60mm"
        android:textSize="12dp"
        android:lineHeight="16dp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/gray_c5"
        app:layout_constraintTop_toBottomOf="@+id/popup_length1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/popup_length3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:lineHeight="16dp"
        android:text="61mm 이상"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/gray_c5"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popup_length2" />
</androidx.constraintlayout.widget.ConstraintLayout>