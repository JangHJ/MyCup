<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/item_cl_interest_cup"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="16dp"
        android:background="@color/gray_c5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/item_interest_img_cup"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="7.5dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/img_evecup"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton
        android:id="@+id/item_btn_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_favorite_active"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/item_interest_cupname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="20dp"
        android:text="루나컵 쇼티"
        android:fontFamily="@font/roboto_medium"
        android:textSize="16dp"
        android:lineHeight="16dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_interest_img_cup"/>

    <TextView
        android:id="@+id/item_interest_cupsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="4dp"
        android:text="타이니"
        android:fontFamily="@font/roboto_medium"
        android:textSize="12dp"
        android:lineHeight="16dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/item_interest_cupname"
        app:layout_constraintStart_toEndOf="@+id/item_interest_img_cup"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="143dp"
        android:layout_marginTop="36dp"
        android:paddingEnd="25dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/item_interest_cupsize"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/item_interest_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="용량 15ml 지름 38mm 총 길이 58mm"
            android:fontFamily="@font/roboto_regular"
            android:textSize="12dp"
            android:lineHeight="16dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/item_interest_cupsize"
            app:layout_constraintStart_toEndOf="@+id/item_interest_img_cup"/>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>