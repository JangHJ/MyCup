<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollCalendarDay"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="9dp">

            <TextView
                android:id="@+id/exTwoDayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:textSize="10dp"
                tools:text="22" />
        </FrameLayout>

        <View
            android:id="@+id/lineForAdded"
            android:layout_width="3dp"
            android:layout_height="3dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="18dp"
            android:background="@drawable/circle_dot_calendar_recorded" />
        <View
            android:id="@+id/lineForCheck"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="12dp"
            android:background="@drawable/line_for_cycle_start" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

