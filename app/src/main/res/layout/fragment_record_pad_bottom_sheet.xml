<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/month_popup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_bg"
    android:orientation="vertical"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingTop="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="생리대"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/save_button_padpicker"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/chipBackgroundColor_unclicked"
            android:gravity="right|center_vertical"
            android:text="완료"
            android:fontFamily="@font/roboto_regular"
            android:textSize="12dp"
            android:textColor="@color/red_e1"
            android:layout_marginRight="16dp"/>

    </LinearLayout>

    <include layout="@layout/type"
        android:id="@+id/padpicker"
        android:theme="@style/CustomPicker"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"/>

</LinearLayout>